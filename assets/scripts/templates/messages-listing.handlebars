{{#each messages as |msg|}}
  <li data-id="{{msg._id}}">{{msg.username}}: {{msg.text}}
    {{#if msg.editable}}
      <form data-id="{{msg._id}}" data-name="{{msg.username}}" class="update">
        <input name="message[text]" type="text" placeholder="message">
        <button>update</button>
      </form>
      <button data-id={{msg._id}} class="delete">delete</button>
    {{/if}}
  </li>
{{/each}}
